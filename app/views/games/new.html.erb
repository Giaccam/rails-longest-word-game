<h2>New game</h2>

<%= @letters %>

<form action="/score" method="post" data-turbo="false">
  <label for="word-input-box">What is the longest word you can think of?</label>
  <input type="text" id = "word-input-box" name="word" placeholder="Add the word here!">
  <input type="submit">
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <%= hidden_field_tag :letters, @letters %>
</form>
